
#  if building for the demo version, run with
#  make DEMO=yes [other stuff]

USEMIDI=yes

GLMP_BINARY=glh2mp
GLMP_BINARY_STATIC=glh2mp.static

GLH2_BINARY=glhexen2
GLH2_BINARY_STATIC=glhexen2.static

MP_BINARY=h2mp
MP_BINARY_STATIC=h2mp.static

H2_BINARY=hexen2
H2_BINARY_STATIC=hexen2.static

CC = gcc
LINKER = gcc
CFLAGS = -fomit-frame-pointer -ffast-math -fexpensive-optimizations -falign-loops=2 -falign-jumps=2 -falign-functions=2 -O2 -march=i386 -mcpu=i686 -DUSE_INTEL_ASM -DPLATFORM_UNIX -DRJNET -DQUAKE2RJ `sdl-config --cflags` -Wall
LDFLAGS = `sdl-config --libs`
GLFLAGS = `sdl-config --libs` -L/usr/X11R6/lib -lGL -lGLU
GLSTATIC = -Wl,-Bstatic -L/usr/lib -lSDL_mixer -lSDL -L/usr/X11R6/lib -lX11 -lXext -ldl -lGLU -L/usr/X11R6/lib -lXxf86dga -lXxf86vm -lXv -L/usr/lib/ -lsmpeg -lvorbisfile -lvorbis -logg -lm -Wl,-Bdynamic -lpthread -lGL
LDSTATIC = -Wl,-Bstatic -L/usr/lib -lSDL_mixer -lSDL -L/usr/X11R6/lib -lX11 -lXext -ldl -L/usr/X11R6/lib -lXxf86dga -lXxf86vm -lXv -L/usr/lib/ -lsmpeg -lvorbisfile -lvorbis -logg -lm -Wl,-Bdynamic -lpthread

ifeq "$(USEMIDI)" "yes"
CFLAGS+= -DUSE_MIDI
GLFLAGS+= -lSDL_mixer
LDFLAGS+= -lSDL_mixer
endif

ifeq "${DEMO}" "yes"
CFLAGS+= -DDEMOBUILD
endif

ifdef DEBUG
CFLAGS+= -DDEBUG -g
endif

# Rules for turning source files into .o files
%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)
%.o: %.S
	$(CC) -c -o $@ $< -save-temps $(CFLAGS)
%.o: %.asm
	nasm -f elf -o $@ $<

