# FIXME: this doesn't work, we need to make clean before each compilation
#all : glmp_static glmp_dynamic glh2_static glh2_dynamic mp_static mp_dynamic h2_static h2_dynamic
	
clean:
	rm -f *.o core sys_ia32.s
	
cleaner:
	rm -f *.o core sys_ia32.s $(GLMP_BINARY) $(GLMP_BINARY_STATIC) $(GLH2_BINARY) $(GLH2_BINARY_STATIC)\
	$(MP_BINARY) $(MP_BINARY_STATIC) $(H2_BINARY) $(H2_BINARY_STATIC)

glmp_static : CFLAGS+= -DGLQUAKE -DH2MP 
glmp_static : $(GLOBJS) $(COMMONOBJS)
		$(LINKER) -o $(GLMP_BINARY_STATIC) $(GLOBJS) $(COMMONOBJS) $(GLSTATIC)
	
glmp_dynamic : CFLAGS+=-DGLQUAKE -DH2MP 
glmp_dynamic : $(GLOBJS) $(COMMONOBJS)
		$(LINKER) -o $(GLMP_BINARY) $(GLOBJS) $(COMMONOBJS) -DGLQUAKE -DH2MP $(GLFLAGS)

glh2_static : CFLAGS+=-DGLQUAKE 
glh2_static : $(GLOBJS) $(COMMONOBJS)
		$(LINKER) -o $(GLH2_BINARY_STATIC) $(GLOBJS) $(COMMONOBJS) -DGLQUAKE $(GLSTATIC)
	
glh2_dynamic : CFLAGS+=-DGLQUAKE 
glh2_dynamic : $(GLOBJS) $(COMMONOBJS)
		$(LINKER) -o $(GLH2_BINARY) $(GLOBJS) $(COMMONOBJS) -DGLQUAKE $(GLFLAGS)

mp_static : CFLAGS+=-DH2MP 
mp_static : $(SOFTOBJS) $(COMMONOBJS)
		$(LINKER) -o $(MP_BINARY_STATIC) $(SOFTOBJS) $(COMMONOBJS) -DH2MP $(LDSTATIC)
	
mp_dynamic : CFLAGS+=-DH2MP 
mp_dynamic : $(SOFTOBJS) $(COMMONOBJS)
		$(LINKER) -o $(MP_BINARY) $(SOFTOBJS) $(COMMONOBJS) -DH2MP $(LDFLAGS)
	
h2_static : $(SOFTOBJS) $(COMMONOBJS)
		$(LINKER) -o $(H2_BINARY_STATIC) $(SOFTOBJS) $(COMMONOBJS) $(LDSTATIC)
	
h2_dynamic : $(SOFTOBJS) $(COMMONOBJS)
		$(LINKER) -o $(H2_BINARY) $(SOFTOBJS) $(COMMONOBJS) $(LDFLAGS)
